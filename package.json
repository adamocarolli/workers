{
    "name": "@dekkai/workers",
    "version": "0.0.0",
    "description": "Worker tools to manage workers in the web and node.js ",
    "main": "dist/index.js",
    "jsnext:main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "https://github.com/dekkai-csv/workers.git",
    "author": "Dario Segura <darionco.dev@gmail.com>",
    "license": "MIT",
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "build": "run-p build:**",
        "build:scripts": "rollup --config",
        "build:types": "tsc --declaration --declarationMap --emitDeclarationOnly --skipLibCheck --outDir ./dist",
        "watch": "yarn build --watch",
        "serve": "live-server --no-browser --mount=/scripts:./dist --entry-file=index.html --watch='dist/index.js' --port=8090 --host=0.0.0.0 ./www",
        "start": "run-p start:**",
        "start:watch": "yarn watch --config-dev-server",
        "test": "run-s test:**",
        "test:node": "mocha ./spec/node/**/*.spec.js",
        "test:browser": "karma start --single-run --browsers ChromeHeadless karma.conf.cjs",
        "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
        "prepack": "yarn build",
        "pre-push": "run-p pre-push:**",
        "pre-push:lint": "yarn lint",
        "pre-push:test": "yarn test"
    },
    "devDependencies": {
        "@types/node": "^14.0.24",
        "@typescript-eslint/eslint-plugin": "^3.7.0",
        "@typescript-eslint/parser": "^3.7.0",
        "chai": "^4.2.0",
        "eslint": "^7.5.0",
        "globby": "^11.0.0",
        "husky": "^4.2.5",
        "karma": "^5.1.0",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^3.1.0",
        "karma-mocha": "^2.0.1",
        "karma-mocha-reporter": "^2.2.5",
        "live-server": "^1.2.1",
        "mocha": "^8.0.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.22.1",
        "rollup-plugin-sourcemaps": "^0.6.2",
        "rollup-plugin-typescript2": "^0.27.0",
        "tslib": "^2.0.0",
        "typescript": "^3.9.7"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn pre-push"
        }
    }
}
