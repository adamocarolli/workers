{
    "name": "@dekkai/workers",
    "version": "0.0.1",
    "description": "Worker tools to manage workers in the browser, node.js and deno",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "jsnext:main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "https://github.com/dekkai-csv/workers.git",
    "author": "Dario Segura <darionco.dev@gmail.com>",
    "license": "MIT",
    "type": "module",
    "files": [
        "dist/",
        "src/"
    ],
    "keywords": [
        "workers",
        "pool",
        "node",
        "browser",
        "deno",
        "wrapper"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "build": "run-p build:**",
        "build:scripts": "rollup --config",
        "build:types": "tsc --declaration --emitDeclarationOnly --skipLibCheck --outDir ./dist",
        "docs": "typedoc --out ./docs ./src --exclude 'node_modules/**/*' --mode file",
        "watch": "yarn build --watch",
        "test": "run-s build test:**",
        "test:node": "mocha ./spec/node/**/*.spec.js",
        "test:browser": "karma start --single-run --browsers ChromeHeadless karma.conf.cjs",
        "_test:deno": "deno run --allow-read ./spec/deno/deno.spec.js",
        "lint": "eslint --ext .js,.ts,.jsx,.tsx \"./{src,spec}/**\"",
        "prepack": "run-s clean test lint",
        "pre-push": "run-p pre-push:**",
        "pre-push:lint": "yarn lint",
        "pre-push:test": "yarn test"
    },
    "devDependencies": {
        "@types/node": "^14.0.27",
        "@typescript-eslint/eslint-plugin": "^3.7.1",
        "@typescript-eslint/parser": "^3.7.1",
        "chai": "^4.2.0",
        "eslint": "^7.5.0",
        "globby": "^11.0.0",
        "husky": "^4.2.5",
        "karma": "^5.1.1",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^3.1.0",
        "karma-mocha": "^2.0.1",
        "karma-mocha-reporter": "^2.2.5",
        "mocha": "^8.0.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.22.1",
        "rollup-plugin-sourcemaps": "^0.6.2",
        "rollup-plugin-typescript2": "^0.27.0",
        "tslib": "^2.0.0",
        "typedoc": "^0.17.8",
        "typescript": "^3.9.7"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn pre-push"
        }
    }
}
